<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>URLEncodingServlet</servlet-name>
        <servlet-class>mypackage.URLEncodingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>URLEncodingServlet</servlet-name>
        <url-pattern>/urlencoding</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ShowSession</servlet-name>
        <servlet-class>mypackage.ShowSession</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShowSession</servlet-name>
        <url-pattern>/ShowSession</url-pattern>
    </servlet-mapping>
    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
